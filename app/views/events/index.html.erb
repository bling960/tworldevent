<!-- Share button -->
<div class="btn-share">
    <a type="button" data-toggle="modal" data-target="#shareModal"><strong>공유하기</strong></a>
</div>

<!-- intro -->
<section class="section">
    <div class="section__content">
        <%= image_tag("logo.png", class: "section__logo mb-4") %>
        <h3>SK텔레콤 PS&M 직영매장</h3>
        <h1 class="mb-3">EVENT</h1>
        <p>PS&Marketing은 SK텔레콤의 유통자회사로 <br> 유일한 SK텔레콤 직영스토어 브랜드입니다.</p>
    </div>
</section>

<!-- loop events -->
<% @events.each do |e| %>

    <!-- 프로젝트 기간 종료시 -->
    <% if e.end < Time.now %>
        <section 
            class="section event finished"
            style="background-image: url('<%= e.image %>');">
            <div class="section__overlay"></div>

            <div class="section__content">
                <p class="section__caution">종료된 이벤트입니다.</p>
                <h4>(<%= e.description %>)</h4>
                <h2 class="section__title"><%= e.title %></h2>
                <p><%= e.start.strftime("%Y.%m.%d") %> ~ <%= e.end.strftime("%Y.%m.%d") %></p>
            </div>

        </section>

    <!-- 링크 미연동시 -->
    <% elsif e.link.nil? %>
        <section 
            class="section event unstarted"
            style="background-image: url('<%= e.image %>');">
            <div class="section__overlay"></div>

            <div class="section__content">
                <p class="section__caution">준비중입니다.</p>
                <h4>(<%= e.description %>)</h4>
                <h2 class="section__title"><%= e.title %></h2>
                <p><%= e.start.strftime("%Y.%m.%d") %> ~ <%= e.end.strftime("%Y.%m.%d") %></p>
            </div>

        </section>

    <!-- 진행중 이벤트 -->
    <% else %>
        <section
            class="section event ongoing"
            style="background-image: url('<%= e.image %>');">
            
            <div class="section__overlay"
                style="background-color: <%= e.color %>">
            </div>

            <a class="section__content" href="<%= e.link %>">
                <h4>(<%= e.description %>)</h4>
                <h2 class="section__title"><%= e.title %></h2>
                <p><%= e.start.strftime("%Y.%m.%d") %> ~ <%= e.end.strftime("%Y.%m.%d") %></p>
            </a>
        </section>
    <% end %>
<% end %>

<!-- Modal -->
<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shareModalLabel">공유하기</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <a class="icon-share" onclick="ShareFacebook()">
            <%= image_tag("share/facebook.svg") %>
        </a>
        <a class="icon-share" onclick="CopyLink()">
            <%= image_tag("share/link.svg") %>
        </a>
      </div>
    </div>
  </div>
</div>